function setup() {
	createCanvas(400, 400);
}

function draw() {
	background(240);
	noStroke();
	strokeCap(SQUARE);

	var blue = color(0, 0, 255);
	var red = color(255, 0, 0);
	var yellow = color(255, 255, 0);

	var topLineX = 150;
	var bottomLineX = 250;
	
	var middleLineY = 180;

	fill(blue);
	rect(middleLineY, 250,  130, 125);

	fill(red);
	rect(0, 0, middleLineY, topLineX);
	
	fill(yellow);
	rect(0, bottomLineX, 30, 150);

	stroke(0);
	strokeWeight(7);
	line(180, 0, 180, 400);
	line(30,250,30,400);
	line(310,250,310,400);
	line(180,370,310,370)

	strokeWeight(12)
	line(0,250, 400, 250);
	line(0,150,400,150);
  //digital rendition of "composition with red, yellow, and blue" (1935)
  //I think I messed up in the line functions since they won't move with the canvas if you change the size of it
}
